@model FinanceProjector.Web.Models.ViewModels.BudgetCategoryViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Budget Categories</h2>

<input type="button" id="AddCategoryButton" value="Add Category" />
<div id="BudgetCategories">
    <div id="AddCategory" style="display: none;">
        @Html.Partial("AddCategory", Model.AddBudgetCategory)
    </div>
    <ul>
        <div id="CategoryList">
            @Html.Partial("BudgetCategoryList", Model.User.BudgetCategories)
        </div>
    </ul>
</div>

@Html.HiddenFor(m => m.User.UserName, new { id="username"})

@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/BudgetCategory.js")"></script>
}